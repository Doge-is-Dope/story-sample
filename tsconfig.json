{
  "compilerOptions": {
    "outDir": "./dist", // Output compiled JS files to the dist directory
    "rootDir": "./src", // Root directory for TypeScript files
    "target": "ES2020", // ECMAScript target version
    "module": "ESNext", // Use ES modules (because Node16 requires ES modules)
    "moduleResolution": "node", // Node-style module resolution
    "esModuleInterop": true, // Allows interop between CommonJS and ES modules
    "skipLibCheck": true, // Skip checking declaration files of libraries
    "forceConsistentCasingInFileNames": true, // Ensure file casing consistency
    "strict": true, // Enable strict mode for better type safety
    "resolveJsonModule": true, // Allow importing JSON files
    "allowSyntheticDefaultImports": true // Allow default imports from modules without default exports
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude node_modules and test files
}
